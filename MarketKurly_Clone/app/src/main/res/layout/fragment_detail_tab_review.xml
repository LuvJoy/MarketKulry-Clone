<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="6dp"
    android:orientation="vertical"
    android:background="@color/fragment_background"
    tools:context=".src.activity_detail_product.fragments.frag_review.ReviewFragment">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:background="@drawable/shape_rounded_button_stroke"
        android:fontFamily="@font/sandol_bold"
        android:letterSpacing="0.01"
        android:text="후기 쓰기"
        android:textColor="@color/kurly_purple"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_frag_recyclerview"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_review"
            android:paddingBottom="48dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:background="@drawable/shape_rounded_button"
        android:fontFamily="@font/sandol_bold"
        android:letterSpacing="0.01"
        android:text="후기 쓰기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
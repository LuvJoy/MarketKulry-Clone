<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragment_background"
    tools:context=".src.activity_main.fragments.frag_home.fragments.frag_tab_reckurly.TabRecKurlyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Section1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.joseph.marketkurly_clone.src.util.NestedScrollableHost
                android:id="@+id/reckurly_event_viewpager_frame"
                android:layout_width="match_parent"
                android:layout_height="368dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/reckurly_event_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="368dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.joseph.marketkurly_clone.src.util.NestedScrollableHost>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:fontFamily="@font/sandol_bold"
                android:letterSpacing="0.01"
                android:paddingStart="16dp"
                android:text="이 상품 어때요?"
                android:textColor="@color/title_gray"
                android:textSize="18sp" />
            <com.joseph.marketkurly_clone.src.util.NestedScrollableHost
                android:id="@+id/reckurly_suggest_recyclerview_frame"
                android:layout_width="match_parent"
                android:layout_height="368dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reckurly_suggest_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                tools:itemCount="5"
                tools:listitem="@layout/item_product" />
            </com.joseph.marketkurly_clone.src.util.NestedScrollableHost>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
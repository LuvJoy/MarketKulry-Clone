<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="54dp"
    android:layout_height="44dp"
    android:background="@color/kurly_purple_alpha">

    <TextView
        android:id="@+id/salesign_dummytext1"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sandol_medium"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/salesign_percent_textview"
        android:layout_width="24dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sandol_bold"
        android:gravity="end"
        android:letterSpacing="-0.04"
        android:maxLines="1"
        android:text="40"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/sandol_medium"
        android:text="%"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/salesign_percent_textview"
        app:layout_constraintStart_toEndOf="@+id/salesign_percent_textview" />
</androidx.constraintlayout.widget.ConstraintLayout>

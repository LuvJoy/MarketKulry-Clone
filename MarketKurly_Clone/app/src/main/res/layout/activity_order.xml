<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.activity_order.OrderActivity">

    <include
        android:id="@+id/order_actionbar"
        layout="@layout/actionbar_inner_page_top"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/fragment_background"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="상품정보"
                    android:fontFamily="@font/sandol_regular"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"/>

                <TextView
                    android:id="@+id/order_product_count_textview"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sandol_bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:gravity="right"
                    android:paddingRight="18dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="3건"/>

                <ImageView
                    android:id="@+id/order_product_expanded_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="@color/text_black" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_product_recyclerview"
                android:visibility="gone"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
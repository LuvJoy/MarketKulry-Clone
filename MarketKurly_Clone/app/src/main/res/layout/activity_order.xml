<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.activity_order.OrderActivity">

    <include
        android:id="@+id/order_actionbar"
        layout="@layout/actionbar_inner_page_top" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragment_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/sandol_regular"
                    android:padding="16sp"
                    android:text="상품정보"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_product_count_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/sandol_bold"
                    android:gravity="right"
                    android:paddingTop="16dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="16dp"
                    android:text="3건"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/order_product_expanded_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="@color/text_black" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_product_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/sandol_regular"
                    android:padding="16sp"
                    android:text="주문자정보"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_userinfo_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/sandol_bold"
                    android:gravity="right"
                    android:paddingTop="16dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="16dp"
                    android:text="전영상, 01050349659"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/order_userinfo_expanded_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="4dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_userinfo_expanded_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/sandol_regular"
                        android:gravity="start"
                        android:text="보내는 분"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_userinfo_name_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sandol_regular"
                        android:text="전영상"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/sandol_regular"
                        android:gravity="start"
                        android:text="휴대폰"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_userinfo_phone_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sandol_regular"
                        android:text="010-5034-9659"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28dp"
                        android:fontFamily="@font/sandol_regular"
                        android:gravity="start"
                        android:text="이메일"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/order_userinfo_email_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/sandol_regular"
                        android:text="luvzoey@kakao.com"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/sandol_regular"
                    android:text="주문자 정보 변경 방법 : 마이컬리 > 개인정보 수정"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sandol_regular"
                    android:padding="16sp"
                    android:text="배송지"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_address_change_button"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sandol_regular"
                    android:gravity="right|center_vertical"
                    android:paddingRight="18dp"
                    android:text="변경"
                    android:textColor="@color/kurly_purple"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_address_shipping_morning_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/shape_edge_oval_button_stroke"
                        android:backgroundTint="@color/kurly_purple"
                        android:fontFamily="@font/sandol_regular"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="2dp"
                        android:text="샛별배송"
                        android:textColor="@color/kurly_purple"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/order_address_shipping_post_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/shape_edge_oval_button_stroke"
                        android:backgroundTint="@color/default_gray"
                        android:fontFamily="@font/sandol_regular"
                        android:gravity="center"
                        android:paddingLeft="6dp"
                        android:paddingTop="2dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="2dp"
                        android:text="택배배송"
                        android:textColor="@color/default_gray"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/order_address_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/sandol_regular"
                    android:paddingLeft="24dp"
                    android:text="서울 관악구 쑥고개로 1 우리집"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_address_receiver_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/sandol_regular"
                    android:paddingLeft="24dp"
                    android:text="받으실 분 정보를 입력해 주세요"
                    android:textColor="@color/default_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sandol_regular"
                    android:textSize="12sp"
                    android:paddingLeft="24dp"
                    android:textColor="@color/default_gray"
                    android:layout_marginTop="18dp"
                    android:text="배송 휴무일: 샛별배송 (휴무없음), 택배배송 (일요일)"/>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
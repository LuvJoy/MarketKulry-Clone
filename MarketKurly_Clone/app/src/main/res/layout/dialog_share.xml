<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bottom_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sandol_bold"
        android:gravity="center"
        android:padding="18dp"
        android:text="공유하기"
        android:textColor="@color/text_black"
        android:textSize="18dp" />


    <ImageView
        android:id="@+id/share_dialog_product_imageview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_image2" />

    <TextView
        android:id="@+id/share_dialog_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:fontFamily="@font/sandol_regular"
        android:gravity="center_horizontal"
        android:text="존나 맛있는 음식"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/share_dialog_overall_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sandol_regular"
        android:gravity="center_horizontal"
        android:text="기가막히게 맛있습니다."
        android:maxLines="2"
        android:textColor="@color/default_gray_littleWhite"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/text_whitegray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/share_dialog_kakao_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_kakao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sandol_regular"
                android:text="카카오톡"
                android:textColor="@color/text_black"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_line_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sandol_regular"
                android:text="라인"
                android:textColor="@color/text_black"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_facebook_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sandol_regular"
                android:text="페이스북"
                android:textColor="@color/text_black"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_twitter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_twitter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sandol_regular"
                android:text="트위터"
                android:textColor="@color/text_black"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
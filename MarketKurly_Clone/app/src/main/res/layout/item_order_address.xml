<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/item_order_address_checkbox"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:button="@null"
                android:drawableStart="@drawable/selector_radiobutton"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_order_address_shipping_morning_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edge_oval_button_stroke"
                android:backgroundTint="@color/kurly_purple"
                android:fontFamily="@font/sandol_regular"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="샛별배송"
                android:textColor="@color/kurly_purple"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_order_address_shipping_post_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edge_oval_button_stroke"
                android:backgroundTint="@color/default_gray"
                android:fontFamily="@font/sandol_regular"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="택배배송"
                android:textColor="@color/default_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_order_address_base_address_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_edge_oval_button_stroke"
                android:backgroundTint="@color/default_gray"
                android:fontFamily="@font/sandol_regular"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:layout_marginLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="기본배송지"
                android:textColor="@color/kurly_purple"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:layout_marginStart="36dp"
            android:id="@+id/item_order_address_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sandol_regular"
            android:text="서울 관악구 쑥고개로 1 우리집"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:layout_marginStart="36dp"
            android:id="@+id/item_order_address_receiver_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sandol_regular"
            android:text="받으실 분 정보를 입력해 주세요"
            android:textColor="@color/default_gray"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="315dp"
        tools:layout_editor_absoluteY="75dp">

        <TextView
            android:id="@+id/item_order_address_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/sandol_regular"
            android:text="삭제"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_order_address_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sandol_regular"
            android:text="수정"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/text_whitegray"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="12dp" />


</LinearLayout>
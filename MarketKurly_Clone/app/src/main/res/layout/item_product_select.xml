<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="12dp"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/item_select_title_textview"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sandol_medium"
        android:maxLines="1"
        android:text="GAP 한입 미시마 사과 4~5입"
        android:textColor="@color/text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_select_sale_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/sandol_extrabold"
        android:text="5,950원"
        android:textColor="@color/text_whitegray_deep"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/item_select_title_textview"
        app:layout_constraintTop_toBottomOf="@+id/item_select_title_textview" />

    <TextView
        android:id="@+id/item_select_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/sandol_extrabold"
        android:text="5,950원"
        android:textColor="@color/text_black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_select_sale_price_textview"
        app:layout_constraintStart_toEndOf="@+id/item_select_sale_price_textview"
        app:layout_constraintTop_toTopOf="@+id/item_select_sale_price_textview" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rounded_button_stroke"
        android:backgroundTint="@color/text_whitegray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_select_title_textview">

        <ImageView
            android:id="@+id/item_select_minus_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/ic_minus"
            app:tint="@color/kurly_purple" />

        <TextView
            android:id="@+id/item_select_count_textview"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:fontFamily="@font/sandol_regular"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_select_plus_button"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/ic_plus"
            app:tint="@color/kurly_purple" />
    </LinearLayout>

    <View
        android:id="@+id/div_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/text_whitegray"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
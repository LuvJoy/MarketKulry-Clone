<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.activity_edit_address.EditAddressActivity">

    <include
        android:id="@+id/edit_address_actionbar"
        layout="@layout/actionbar_inner_page_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/edit_address_default_textview"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_black"
            android:paddingLeft="4dp"
            android:maxLines="2"
            android:text="관악구 쑥고개로"
            android:fontFamily="@font/sandol_regular"/>

        <EditText
            android:id="@+id/edit_address_detail_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="나머지 주소를 입력해주세요"
            android:background="@drawable/selector_edittext"
            style="@style/kurly_edittext_style"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받으실 분"
            android:paddingLeft="4dp"
            android:fontFamily="@font/sandol_bold"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_black"/>
        <EditText
            android:id="@+id/edit_address_people_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="이름을 입력해 주세요"
            android:background="@drawable/selector_edittext"
            style="@style/kurly_edittext_style"/>

        <TextView
            android:id="@+id/edit_address_phone_number_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:paddingLeft="4dp"
            android:fontFamily="@font/sandol_bold"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:textColor="@color/text_black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="숫자만 입력해주세요"
            android:inputType="phone"
            android:background="@drawable/selector_edittext"
            style="@style/kurly_edittext_style"/>

    </LinearLayout>

</LinearLayout>
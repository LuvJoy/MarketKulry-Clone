<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="kurly_edittext_style" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/kurly_purple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/sandol_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:cursorVisible">true</item>
        <item name="hintTextColor">@color/text_whitegray</item>
        <item name="android:textCursorDrawable">@drawable/shape_edittext_curor</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="alert_dialog_custom" parent="Widget.AppCompat.ButtonBar.AlertDialog">

        <item name="fontFamily">@font/sandol_regular</item>
        <item name="android:textColor">@color/kurly_purple</item>
    </style>

</resources>
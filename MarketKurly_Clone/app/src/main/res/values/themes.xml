<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarketKurly_Clone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/kurly_purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/kurly_purple</item>
        <item name="colorSecondaryVariant">@color/kurly_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="alertDialogStyle">@style/alert_dialog_custom</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/kurly_purple</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashActivityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kurly_purple</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/kurly_purple</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="InnerActivityTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/kurly_purple</item>
        <item name="alertDialogStyle">@style/alert_dialog_custom</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- 해결필요 -->
        <item name="colorControlActivated">@color/kurly_purple</item>
    </style>


    <!-- BottomNavigationView Text Setting -->
    <style name="BottomNavTextActive">
        <item name="android:layout_marginTop">4dp</item>
        <item name="fontFamily">@font/sandol_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_gray_bottomnav</item>
    </style>

    <style name="BottomNavTextInActive">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/sandol_regular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/kurly_purple</item>
    </style>

    <!-- TabLayout TextSettings -->
    <style name="TabLayoutTextAppearance">
        <item name="fontFamily">@font/sandol_medium</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="DetailTabLayoutTextAppearance">
        <item name="fontFamily">@font/sandol_regular</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.joseph.marketkurly_clone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarketKurly_Clone"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".src.activity_order.OrderActivity"></activity>
        <activity
            android:name=".src.activity_edit_address.EditAddressActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_address_manager.AddressManagerActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_search_address.SearchAddressActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_cart.CartActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_select_product.SelectProductActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_image_viewer.ImageViewerActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_detail_product.DetailProductActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_signup.SignUpActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_signin.SignInActivity"
            android:theme="@style/InnerActivityTheme" />
        <activity
            android:name=".src.activity_splash.SplashActivity"
            android:theme="@style/SplashActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.activity_main.MainActivity" />
    </application>

</manifest>